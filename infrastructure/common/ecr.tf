resource "aws_ecr_repository" "dagit" {
  name                 = "${var.platform_name}-dagit"
  image_tag_mutability = "IMMUTABLE"
}

resource "aws_ecr_repository" "daemon" {
  name                 = "${var.platform_name}-daemon"
  image_tag_mutability = "IMMUTABLE"
}

resource "aws_ecr_repository" "user-code" {
  name                 = "${var.platform_name}-user-code"
